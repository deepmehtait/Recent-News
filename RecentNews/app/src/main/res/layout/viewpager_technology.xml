<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dots="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/primary_light">

    <ImageView
        android:id="@+id/technologyImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/technologyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="111dp"
        android:padding="10dp"
        android:text="Top Stories"
        android:background="@color/black_40_op"
        android:textColor="@color/icons"
        android:textSize="30sp">
    </TextView>

    <TextView
        android:layout_margin="5dp"
        android:background="@color/black_40_op"
        android:textSize="15sp"
        android:id="@+id/technologyAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:shadowColor="@color/primary_text"
        android:textColor="@color/icons"
        android:text="TextView"
        android:layout_above="@+id/technologyTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more"
            android:textColor="@color/icons"
            android:textSize="10sp" />
    </LinearLayout>
    <pl.tajchert.waitingdots.DotsTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dots"
        android:textSize="100sp"
        android:text="Loading"
        android:textColor="@color/primary_text"
        dots:autoplay="false"
        dots:period="100" />

</RelativeLayout>